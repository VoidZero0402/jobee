<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_welcome_chat_title"
            android:textAppearance="@style/TextAppearance.Body.Medium.Medium"
            android:textColor="?attr/colorNeutralHighest" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="8dp"
            android:text="@string/text_welcome_chat_description"
            android:textAppearance="@style/TextAppearance.Body.Small"
            android:textColor="?attr/colorNeutral" />

    </LinearLayout>

    <com.bluerose.jobee.ui.components.ChatForm
        android:id="@+id/chat_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>