<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_not_found_jobs_title"
        android:textAppearance="@style/TextAppearance.Body.Large.Semibold"
        android:textColor="?attr/colorNeutralHighest" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/text_not_found_jobs_description"
        android:textAppearance="@style/TextAppearance.Body.Small"
        android:textColor="?attr/colorNeutral" />

</LinearLayout>