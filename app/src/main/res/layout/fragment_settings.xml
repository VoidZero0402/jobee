<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_eye"
            app:text="Job Seeking Status" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSurfaceHighestVariant" />

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_user"
            app:text="Personal Information" />

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_sort"
            app:text="Linked Accounts" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSurfaceHighestVariant" />

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_bell"
            app:text="Notifications" />

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_notes"
            app:text="Applications Issues" />

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_shield_check"
            app:text="Security Issues" />

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_sort_by_alphabet"
            app:text="Language">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/text_english_us"
                android:textAppearance="@style/TextAppearance.Body.Medium.Medium"
                android:textColor="?attr/colorNeutral" />

        </com.bluerose.jobee.ui.components.ListItem>

        <com.bluerose.jobee.ui.components.ListItem
            android:id="@+id/theme_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_moon"
            app:navigationArrowVisible="false"
            app:text="Dark Mode">

            <com.bluerose.jobee.ui.components.Switch
                android:id="@+id/theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.bluerose.jobee.ui.components.ListItem>


        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_info_square"
            app:text="Help Center" />

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_users_group"
            app:text="Invite Friends" />

        <com.bluerose.jobee.ui.components.ListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_star_shine"
            app:text="Rate Us" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSurfaceHighestVariant" />

        <com.bluerose.jobee.ui.components.ListItem
            android:id="@+id/logout_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_logout"
            app:navigationArrowVisible="false"
            app:text="Logout"
            app:tintColor="?attr/colorError" />

    </LinearLayout>

</ScrollView>