<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_notes_bold"
        android:visibility="gone"
        app:tint="?attr/colorNeutral" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autofillHints="@null"
        android:background="@android:color/transparent"
        android:hint="@null"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.Body.Large.Medium"
        android:textColor="?attr/colorNeutralHighest"
        android:textColorHint="?attr/colorNeutral" />

    <ImageButton
        android:id="@+id/action"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/ripple_clickable"
        android:contentDescription="@null"
        android:src="@drawable/ic_eye_bold"
        android:visibility="gone"
        app:tint="?attr/colorNeutral" />

</merge>