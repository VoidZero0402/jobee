<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.Jobee" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_600</item>
        <item name="colorNeutralLow">@color/neutral_500</item>
        <item name="colorSuccess">@color/emerald_500</item>
        <item name="colorSuccessContainer">@color/emerald_transparent</item>
        <item name="colorInfo">@color/blue_500</item>
        <item name="colorInfoContainer">@color/blue_transparent</item>
        <item name="colorWarning">@color/yellow_500</item>
        <item name="colorWarningContainer">@color/yellow_transparent</item>
        <item name="colorError">@color/red_500</item>
        <item name="colorErrorContainer">@color/red_transparent</item>
        <item name="scrimColor">@color/black_scrim</item>
        <item name="colorAccent">?attr/colorNeutral</item>
        <item name="rippleColorVariant">@color/blue_transparent</item>
        <item name="textFieldContainerStyle">@style/Widget.TextField.Container</item>
        <item name="chipStyle">@style/Widget.Chip.Primary</item>
        <item name="dropdownContainerStyle">@style/Widget.Dropdown.Container</item>
        <item name="dropdownItemStyle">@style/Widget.Dropdown.Item</item>
        <item name="listItemContainerStyle">@style/Widget.ListItem.Container</item>
        <item name="tabStyle">@style/Widget.Tab.Base</item>
        <item name="bottomNavigationContainerStyle">@style/Widget.BottomNavigationView.Container</item>
        <item name="navItemContainerStyle">@style/Widget.NavItem.Container</item>
        <item name="iconButtonStyle">@style/Widget.IconButton</item>
        <item name="actionBarContainerStyle">@style/Widget.ActionBar.Container</item>
        <item name="tagStyle">@style/Widget.Tag.Primary</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <!-- Light application theme -->
    <style name="Theme.Jobee" parent="Base.Theme.Jobee">
        <item name="colorPrimaryContainer">@color/blue_100</item>
        <item name="rippleColor">@color/dark_transparent</item>
        <item name="colorNeutralLowest">@color/neutral_400</item>
        <item name="colorNeutral">@color/neutral_700</item>
        <item name="colorNeutralHigh">@color/neutral_800</item>
        <item name="colorNeutralHighest">@color/neutral_900</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceHigh">@color/neutral_50</item>
        <item name="colorSurfaceHighVariant">@color/neutral_100</item>
        <item name="colorSurfaceHighest">@color/neutral_100</item>
        <item name="colorSurfaceHighestVariant">@color/neutral_200</item>
    </style>
</resources>