<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Button widget styles -->
    <style name="Widget.Button.Base" parent="">
        <item name="android:layout_height">58dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Large.Semibold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Button.Primary.Base" parent="Widget.Button.Base">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.Button.Primary.Base">
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <style name="Widget.Button.Primary.Rounded" parent="Widget.Button.Primary.Base">
        <item name="android:background">@drawable/selector_button_primary_rounded</item>
    </style>

    <style name="Widget.Button.Secondary.Base" parent="Widget.Button.Base">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Button.Secondary" parent="Widget.Button.Secondary.Base">
        <item name="android:background">@drawable/ripple_button_secondary</item>
    </style>

    <style name="Widget.Button.Secondary.Rounded" parent="Widget.Button.Secondary.Base">
        <item name="android:background">@drawable/ripple_button_secondary_rounded</item>
    </style>

    <!-- IconButton widget styles -->
    <style name="Widget.Button.IconButton" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/ripple_clickable</item>
        <item name="android:tint">?attr/colorNeutralHighest</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Widget.Button.IconButton.Base" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Widget.Button.IconButton.Primary.Base" parent="Widget.Button.IconButton.Base">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Widget.Button.IconButton.Primary" parent="Widget.Button.IconButton.Primary.Base">
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <style name="Widget.Button.IconButton.Primary.Rounded" parent="Widget.Button.IconButton.Primary.Base">
        <item name="android:background">@drawable/selector_button_primary_rounded</item>
    </style>

    <style name="Widget.Button.IconButton.Secondary.Base" parent="Widget.Button.IconButton.Base">
        <item name="android:tint">?attr/colorNeutralHighest</item>
    </style>

    <style name="Widget.Button.IconButton.Secondary" parent="Widget.Button.IconButton.Secondary.Base">
        <item name="android:background">@drawable/ripple_icon_button</item>
    </style>

    <style name="Widget.Button.IconButton.Secondary.Rounded" parent="Widget.Button.IconButton.Secondary.Base">
        <item name="android:background">@drawable/ripple_icon_button_rounded</item>
    </style>

    <!-- Tag widget styles -->
    <style name="Widget.Tag.Base" parent="">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.XSmall.Semibold</item>
    </style>

    <style name="Widget.Tag.Primary" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_primary</item>
        <item name="android:textColor">?attr/colorNeutralHigh</item>
    </style>

    <style name="Widget.Tag.Secondary" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Tag.Secondary.Circle" parent="">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_tag_secondary_circle</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.XSmall.Semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Tag.Success" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_success</item>
        <item name="android:textColor">?attr/colorSuccess</item>
    </style>

    <style name="Widget.Tag.Info" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_info</item>
        <item name="android:textColor">?attr/colorInfo</item>
    </style>

    <style name="Widget.Tag.Warning" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_warning</item>
        <item name="android:textColor">?attr/colorWarning</item>
    </style>

    <style name="Widget.Tag.Error" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_error</item>
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <!-- Avatar widget styles -->
    <style name="Widget.Avatar.Base" parent="">
        <item name="android:background">@drawable/shape_avatar</item>
        <item name="android:clipToOutline" tools:ignore="NewApi">true</item>
    </style>

    <style name="Widget.Avatar.Small" parent="Widget.Avatar.Base">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Widget.Avatar.Medium" parent="Widget.Avatar.Base">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <!-- TextField widget styles -->
    <style name="Widget.TextField.Container" parent="">
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- SearchField widget styles -->
    <style name="Widget.SearchField.Base" parent="">
        <item name="hint">Search something...</item>
        <item name="icon">@drawable/ic_magnifier</item>
        <item name="action">custom</item>
        <item name="actionIcon">@drawable/ic_tuning</item>
    </style>

    <!-- Chip widget styles -->
    <style name="Widget.Chip.Base" parent="">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.Chip.Primary" parent="Widget.Chip.Base">
        <item name="android:textAppearance">@style/TextAppearance.Body.Large.Medium</item>
    </style>

    <!-- ApplicationStatus widget styles -->
    <style name="Widget.ApplicationStatus.Base" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Large.Semibold</item>
    </style>

    <style name="Widget.ApplicationStatus.Success" parent="Widget.ApplicationStatus.Base">
        <item name="android:background">@drawable/shape_status_success</item>
        <item name="android:textColor">?attr/colorSuccess</item>
    </style>

    <style name="Widget.ApplicationStatus.Info" parent="Widget.ApplicationStatus.Base">
        <item name="android:background">@drawable/shape_status_info</item>
        <item name="android:textColor">?attr/colorInfo</item>
    </style>

    <style name="Widget.ApplicationStatus.Warning" parent="Widget.ApplicationStatus.Base">
        <item name="android:background">@drawable/shape_status_warning</item>
        <item name="android:textColor">?attr/colorWarning</item>
    </style>

    <style name="Widget.ApplicationStatus.Error" parent="Widget.ApplicationStatus.Base">
        <item name="android:background">@drawable/shape_status_error</item>
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <!-- Dropdown widget styles -->
    <style name="Widget.Dropdown.Container" parent="">
        <item name="android:orientation">vertical</item>
        <item name="android:minWidth">180dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/shape_dropdown</item>
    </style>

    <style name="Widget.Dropdown.Item" parent="">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ripple_dropdown_item</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Large.Semibold</item>
        <item name="android:textColor">?attr/colorNeutralHighest</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- ListItem widget styles -->
    <style name="Widget.ListItem.Container" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:background">@drawable/ripple_list_item</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Tab widget styles -->
    <style name="Widget.Tab.Base" parent="">
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ripple_tab</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.XLarge.Semibold</item>
        <item name="android:textColor">?attr/colorNeutral</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- BottomNavigation widget styles -->
    <style name="Widget.BottomNavigationView.Container" parent="">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">@drawable/shape_bottom_navigation</item>
    </style>

    <style name="Widget.NavItem.Container" parent="">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ripple_nav_item</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- ActionBar widget styles -->
    <style name="Widget.ActionBar.Container" parent="">
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>
</resources>