<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Button widget styles -->
    <style name="Widget.Button.Base" parent="">
        <item name="android:layout_height">58dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Large.Semibold</item>
    </style>

    <style name="Widget.Button.Primary.Base" parent="Widget.Button.Base">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.Button.Primary.Base">
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <style name="Widget.Button.Primary.Rounded" parent="Widget.Button.Primary.Base">
        <item name="android:background">@drawable/selector_button_primary_rounded</item>
    </style>

    <style name="Widget.Button.Secondary.Base" parent="Widget.Button.Base">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Button.Secondary" parent="Widget.Button.Secondary.Base">
        <item name="android:background">@drawable/ripple_button_secondary</item>
    </style>

    <style name="Widget.Button.Secondary.Rounded" parent="Widget.Button.Secondary.Base">
        <item name="android:background">@drawable/ripple_button_secondary_rounded</item>
    </style>

    <!-- IconButton widget styles -->
    <style name="Widget.Button.IconButton.Base" parent="">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>
    </style>

    <style name="Widget.Button.IconButton.Primary.Base" parent="Widget.Button.IconButton.Base">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Widget.Button.IconButton.Primary" parent="Widget.Button.IconButton.Primary.Base">
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <style name="Widget.Button.IconButton.Primary.Rounded" parent="Widget.Button.IconButton.Primary.Base">
        <item name="android:background">@drawable/selector_button_primary_rounded</item>
    </style>

    <style name="Widget.Button.IconButton.Secondary.Base" parent="Widget.Button.IconButton.Base">
        <item name="android:tint">?attr/colorNeutralHighest</item>
    </style>

    <style name="Widget.Button.IconButton.Secondary" parent="Widget.Button.IconButton.Secondary.Base">
        <item name="android:background">@drawable/ripple_icon_button</item>
    </style>

    <style name="Widget.Button.IconButton.Secondary.Rounded" parent="Widget.Button.IconButton.Secondary.Base">
        <item name="android:background">@drawable/ripple_icon_button_rounded</item>
    </style>

    <!-- Tag widget styles -->
    <style name="Widget.Tag.Base" parent="">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.XSmall.Medium</item>
    </style>

    <style name="Widget.Tag.Primary" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_primary</item>
        <item name="android:textColor">?attr/colorNeutralHigh</item>
    </style>

    <style name="Widget.Tag.Success" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_success</item>
        <item name="android:textColor">?attr/colorSuccess</item>
    </style>

    <style name="Widget.Tag.Info" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_info</item>
        <item name="android:textColor">?attr/colorInfo</item>
    </style>

    <style name="Widget.Tag.Warning" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_warning</item>
        <item name="android:textColor">?attr/colorWarning</item>
    </style>

    <style name="Widget.Tag.Error" parent="Widget.Tag.Base">
        <item name="android:background">@drawable/shape_tag_error</item>
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <!-- Avatar widget styles -->
    <style name="Widget.Avatar.Base" parent="">
        <item name="android:background">@drawable/shape_avatar</item>
        <item name="android:clipToOutline" tools:ignore="NewApi">true</item>
    </style>

    <style name="Widget.Avatar.Small" parent="Widget.Avatar.Base">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Widget.Avatar.Medium" parent="Widget.Avatar.Base">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <!-- TextField widget styles -->
    <style name="Widget.TextField.Container" parent="">
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- SearchField widget styles -->
    <style name="Widget.SearchField.Base" parent="">
        <item name="hint">Search something...</item>
        <item name="icon">@drawable/ic_magnifier</item>
        <item name="action">custom</item>
        <item name="actionIcon">@drawable/ic_tuning</item>
    </style>
</resources>